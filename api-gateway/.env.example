# Puerto en el que se ejecutará el API Gateway
PORT=4000

# Origin autorizado para CORS (puede ser una lista separada por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8080,http://127.0.0.1:8080

# URLs de los microservicios a los que se conecta el gateway
USERS_SERVICE_URL=http://localhost:3000
TRANSPORTE_SERVICE_URL=http://localhost:5000

# Configuración común
REQUEST_TIMEOUT_MS=8000

